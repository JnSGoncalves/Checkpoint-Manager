<Window x:Class="Checkpoint_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Checkpoint_Manager"
        xmlns:vm="clr-namespace:Checkpoint_Manager.ViewModels"
        mc:Ignorable="d"
        Title="Checkpoint Maneger" Height="600" Width="1100"
        Icon="app_icon.ico"
        MinHeight="350" MinWidth="550"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <!-- Acessa a instância da MainViewModel diretamente do código -->
        <Binding Source="{x:Static local:App.mainViewModel}" />
    </Window.DataContext>
    
    <Grid Background="#242222">
        <Grid.RowDefinitions>
            <!-- Top Menu -->
            <RowDefinition Height="50"/>
            <!-- Conteúdo principal -->
            <RowDefinition Height="*"/>
            <!-- Barra Inferior -->
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <!-- Side Bar -->
            <ColumnDefinition Width="200"/>
            <!-- Conteúdo principal -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Top Menu -->
        <Frame Source="Views/TopMenu.xaml" NavigationUIVisibility="Hidden"
               Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"></Frame>
        
        <!-- Side Bar -->
        <Frame x:Name="sideBarFrame" Source="Views/SideBar.xaml" NavigationUIVisibility="Hidden"
               Grid.Column="0" Grid.Row="1" >
            <Frame.RenderTransform>
                <TranslateTransform x:Name="sideBarTranslateTransform" X="0" />
            </Frame.RenderTransform>
        </Frame>

        <!-- Conteúdo Principal -->
        <Frame x:Name="mainContent" NavigationUIVisibility="Hidden" 
               Grid.Column="1" Grid.Row="1"></Frame>

        <!-- Barra Inferior -->
        <Frame Source="Views/DownBar.xaml" NavigationUIVisibility="Hidden"
               Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2"></Frame>

    </Grid>
</Window>
