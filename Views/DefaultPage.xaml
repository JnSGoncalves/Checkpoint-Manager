<Page x:Class="Checkpoint_Manager.Views.DefaultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Checkpoint_Manager.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DefaultPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition MaxHeight="150"/>
        </Grid.RowDefinitions>
        
        <Image Source="/Assets/app_icon.png"
               MaxHeight="250"
               Grid.Row="0" VerticalAlignment="Bottom"
               Margin="0,20,0,20"/>

        <Label Style="{StaticResource LabelStyle}" 
               Grid.Row="1" FontSize="40"
               VerticalAlignment="Top"
               Margin="0,50,0,0"
               FontWeight="DemiBold">
            Checkpoint Maneger
        </Label>
    </Grid>
</Page>
