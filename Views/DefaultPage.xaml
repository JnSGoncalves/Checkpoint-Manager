<Page x:Class="Checkpoint_Manager.Views.DefaultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Checkpoint_Manager.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DefaultPage">
    
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Views/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Image Source="/Assets/app_icon.png"
               MaxHeight="300"
               MinHeight="80"
               Grid.Row="0" 
               VerticalAlignment="Bottom"
               Margin="0,20,0,10"/>
        <Viewbox Grid.Row="1">
            <TextBlock FontFamily="{StaticResource Roboto}" 
                      FontSize="20"
                      Foreground="White"
                      VerticalAlignment="Top"
                      Margin="30,20,30,50"
                      FontWeight="DemiBold">
                Checkpoint Manager
            </TextBlock>
        </Viewbox>
    </Grid>
</Page>