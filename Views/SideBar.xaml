<Page x:Class="Checkpoint_Manager.Views.SideBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Checkpoint_Manager.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="200"
      Title="SideBar">

    <Page.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#636262"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{Binding Background, ElementName=mainGrid}" />
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled">
        <Border BorderThickness="0,0,2,0" BorderBrush="#383636">
            <StackPanel x:Name="mainGrid" Background="#262525">
                <Button Style="{StaticResource ButtonStyle}">
                    Hollow Knight
                </Button>

                <Button Style="{StaticResource ButtonStyle}">
                    Dark Souls III
                </Button>

                <Button Style="{StaticResource ButtonStyle}">
                    Dark Souls III
                </Button>
                <Button Style="{StaticResource ButtonStyle}">
                    Dark Souls III
                </Button>
                <Button Style="{StaticResource ButtonStyle}">
                    Dark Souls III
                </Button>
                <Button Style="{StaticResource ButtonStyle}">
                    Dark Souls III
                </Button>
                <Button Style="{StaticResource ButtonStyle}">
                    Dark Souls III
                </Button>
                <Button Style="{StaticResource ButtonStyle}">
                    Dark Souls III
                </Button>
                <Button Style="{StaticResource ButtonStyle}">
                    Dark Souls III
                </Button>
                <Button Style="{StaticResource ButtonStyle}">
                    Dark Souls III
                </Button>
                <Button Style="{StaticResource ButtonStyle}">
                    Dark Souls III
                </Button>
                <Button Style="{StaticResource ButtonStyle}">
                    Dark Souls III
                </Button>
                <Button Style="{StaticResource ButtonStyle}">
                    Dark Souls III
                </Button>
                <Button Style="{StaticResource ButtonStyle}">
                    Dark Souls III
                </Button>
                <Button Style="{StaticResource ButtonStyle}">
                    Dark Souls III
                </Button>
                <Button Style="{StaticResource ButtonStyle}">
                    Dark Souls III
                </Button>
                <Button Style="{StaticResource ButtonStyle}">
                    Dark Souls III
                </Button>
                <Button Style="{StaticResource ButtonStyle}">
                    Dark Souls III
                </Button>
            </StackPanel>
        </Border>
    </ScrollViewer>
</Page>
